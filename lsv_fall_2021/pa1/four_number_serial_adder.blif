.model four_number_serial_adder
.inputs a b c d
.outputs sum
# 
.subckt full_adder a=a  b=b  cin=cin1 sum=s1  cout=c1
.subckt full_adder a=c  b=d  cin=cin2 sum=s2  cout=c2
.subckt full_adder a=s1 b=s2 cin=cin3 sum=sum cout=c3
#
.latch c1 cin1 0
.latch c2 cin2 0
.latch c3 cin3 0
.end

.model full_adder
.inputs a b cin
.outputs sum cout
# s = XOR(a, b, cin)
.names a b cin sum
100 1
010 1
001 1
111 1
# cout = MAJ(a, b, cin)
.names a b cin cout
11- 1
1-1 1
-11 1
.end