# 4 Number Serial Adder

.model 4NSerialAdder
.inputs a b c d
.outputs s
.latch cout1 cin1 0
.latch cout2 cin2 0
.latch cout3 cin3 0
.subckt fulladder a=a b=b cin=cin1 s=t1 cout=cout1
.subckt fulladder a=c b=d cin=cin2 s=t2 cout=cout2
.subckt fulladder a=t1 b=t2 cin=cin3 s=s cout=cout3 
.end

