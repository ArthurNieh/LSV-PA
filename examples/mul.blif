.model 2bitmul

    .inputs a0 a1 b0 b1
    .outputs y0 y1 y2 y3

    .names a0 b0 y0
    11 1

    .names a1 b0 b0a1
    11 1

    .names a0 b1 b1a0
    11 1

    .subckt halfadder a=b0a1 b=b1a0 s=y1 cout=ci

    .names a1 b1 b1a1
    11 1

    .subckt halfadder a=b1a1 b=ci s=y2 cout=y3

.end

# Half-Adder submodule.
.model halfadder

    .inputs a b
    .outputs s cout

    .names a b s
    10 1
    01 1

    .names a b cout
    11 1

.end
